.tab-btn {
    position: absolute;
    top: 0;
    right: 0;
    width: 80rpx;
    height: 80rpx;
}

.tab-btn image {
    width: 40rpx;
    height: 80rpx;
}

.tab-h {
    position: fixed;
    top: 0;
    left: 0;
    height: 80rpx;
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
    line-height: 80rpx;
    text-align: center;
    font-size: 34rpx;
    white-space: nowrap;
    background: #fe6500;
    z-index: 9;
}

.tab-item {
    display: inline-block;
    margin: 0 30rpx;
    text-align: center;
    color: #b4b4b4;
}

.tab-item.active {
    position: relative;
    color: #fff;
}

.tab-item.active:after {
    content: "";
    display: block;
    height: 6rpx;
    width: 80%;
    background: #fe6500;
    position: absolute;
    bottom: 0;
    margin-left: -40%;
    left: 50%;
    border-radius: 16rpx;
}

.item-ans {
    width: 100%;
    display: flex;
    flex-grow: row no-wrap;
    justify-content: space-between;
    padding: 30rpx;
    box-sizing: border-box;
    height: 180rpx;
    align-items: center;
    border-bottom: 1px solid #f2f2f2;
}

.avatar {
    width: 100rpx;
    height: 100rpx;
    position: relative;
    padding-right: 30rpx;
}

.avatar .img {
    width: 100%;
    height: 100%;
}

.avatar .doyen {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    bottom: -2px;
    right: 20rpx;
}

.expertInfo {
    font-size: 12px;
    flex-grow: 2;
    color: #b0b0b0;
    line-height: 1.5em;
}

.expertInfo .name {
    font-size: 16px;
    color: #000;
    margin-bottom: 6px;
}

.askBtn {
    width: 120rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    font-size: 14px;
    border-radius: 60rpx;
    border: 1px solid #fff;
    color: #fff;
}

.tab-content {
    padding-top: 160rpx;
    box-sizing: border-box;
    background-color: #e6e6e6;
}

.scoll-h {
    height: 100%;
}

.scoll-h.load {
    padding-bottom: 80rpx;
    box-sizing: border-box;
}

.loading {
    text-align: center;
    font-size: 20px;
    line-height: 80rpx;
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 0;
}

.loading image {
    display: block;
    margin: auto;
    width: 200rpx;
    height: 80rpx;
}

.loading.load {
    height: 80rpx;
}

.margin-top-180 {
    margin-top: 180rpx;
}

.search-box {
    position: fixed;
    top: 80rpx;
    left: 0;
    width: 100%;
    height: 80rpx;
    background: #fe6500;
    z-index: 999;
}

.search-input {
    margin: 10rpx 30rpx;
    border-radius: 50px;
    line-height: 60rpx;
    text-align: center;
    font-size: 30rpx;
    color: #999;
    background: #fff;
}

.search-input image {
    margin-right: 15rpx;
    width: 26rpx;
    height: 60rpx;
    vertical-align: top;
}