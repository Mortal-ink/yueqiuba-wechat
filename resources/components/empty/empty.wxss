.empty-box {
    position: absolute;
    top: 40%;
    left: 50%;
    width: 100%;
    box-sizing: border-box;
    transform: translate3d(-50%,-60%,0);
}

.empty-box image {
    display: block;
    margin: 0 auto 20rpx;
    width: 240rpx;
    height: 207rpx;
}

.empty-box text {
    display: block;
    padding: 10rpx;
    box-sizing: border-box;
    line-height: 1.5;
    text-align: center;
    font-size: 24rpx;
    color: #666;
}

.empty-box button {
    margin: 20rpx auto 0;
    padding: 0;
    border-radius: 10rpx;
    width: 200rpx;
    line-height: 88rpx;
    font-size: 28rpx;
    color: #fff;
    background: #fe6500;
}